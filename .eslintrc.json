{
  "root": true,
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "parser": "flow",
        "trailingComma": "none",
        "endOfLine": "auto"
      }
    ],
    "no-unused-vars": [1],
    "no-alert": 0,
    "strict": [2, "never"],
    "new-cap": [0],
    "consistent-return": 0,
    "no-underscore-dangle": 0,
    "no-var": [1],
    "one-var": [0],
    "max-len": [0, { "code": 140, "ignoreUrls": true }],
    "comma-dangle": 0,
    "arrow-parens": 1
  }
}
